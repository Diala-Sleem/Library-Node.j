<%-include('parts/nav.ejs')%>
<div class="page-content header-text">
  <div class="container">
    <div class="row justify-content-md-center align-items-center">
      <div class="col col-lg-12">
        <div style="margin-top: 140px; padding: 20px">
          <table class="table table-hover table-dark">
            <thead>
              <tr>
                <th scope="col">Book Image</th>
                <th scope="col">Book title</th>
                <th scope="col">Book Author</th>
                <th scope="col">Book Description</th>
                <th scope="col">Book Price</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <%for(let book of myBooks){ %>
              <tr>
                <td>
                  <img src="/images/<%=book.image%>" alt="<%=book.image%>" />
                </td>
                <th><%=book.title%></th>
                <td><%=book.author%></td>
                <td><%=book.description%></td>
                <td><%=book.price%> $</td>

                <td class="delbutt">
                  <form
                    action="/delete/<%=book._id%>"
                    method="POST"
                    class="col-lg-12 contact-form"
                  >
                    <button type="submit" class="filled-button">Delete</button>
                  </form>

                  <form
                    action="/update/<%=book._id%>"
                    method="GET"
                    class="col-lg-12 contact-form"
                  >
                    <button type="submit" class="filled-button">Update</button>
                  </form>
                </td>
              </tr>
              <%}%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%-include('parts/footer.ejs')%>
