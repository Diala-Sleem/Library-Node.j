<%-include('parts/nav.ejs')%>

<div class="page-content header-text">
  <div class="container">
    <div class="row justify-content-md-center align-items-center">
      <div class="col col-lg-6">
        <div style="margin-top: 140px; padding: 20px">
          <div class="col-md-12">
            <div class="contact-form">
              <div class="row">
                <form
                  method="POST"
                  action="/update/<%=bookUpdate._id%>"
                  enctype="multipart/form-data"
                >
                  <%if(Success && Success.length > 0){%>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <p class="alert alert-warning"><%=Success%></p>
                  </div>
                  <%}%> <%if(Erorr && Erorr.length > 0){%>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <p class="alert alert-warning"><%=Erorr%></p>
                  </div>
                  <%}%>
                  <input type="hidden" value="<%=bookUpdate._id%>" />
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <input
                      name="title"
                      type="text"
                      class="form-control"
                      id="title"
                      placeholder="Book Title"
                      required
                      value="<%=bookUpdate.title%>"
                    />
                  </div>

                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <input
                      name="description"
                      type="text"
                      class="form-control"
                      id="description"
                      placeholder="Description"
                      required
                      value="<%=bookUpdate.description%>"
                    />
                  </div>

                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <input
                      name="author"
                      type="text"
                      class="form-control"
                      id="author"
                      placeholder="Author"
                      required
                      value="<%=bookUpdate.author%>"
                    />
                  </div>

                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <input
                      name="price"
                      type="number"
                      class="form-control"
                      id="price"
                      placeholder="Price"
                      required
                      value="<%=bookUpdate.price%>"
                    />
                  </div>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <img
                      src="/images/<%=bookUpdate.image%>"
                      alt="<%=bookUpdate.image%>"
                      width="100%"
                    />
                  </div>

                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <input
                      name="image"
                      type="file"
                      class="form-control"
                      id="image"
                      accept=".jpg,.jpeg,.png,.svg"
                    />
                  </div>
                  <input
                    type="hidden"
                    value="<%=bookUpdate.image%>"
                    name="oldImage"
                  />
                  <div class="col-lg-12">
                    <button
                      type="submit"
                      id="form-submit"
                      class="filled-button"
                    >
                      Update
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%-include('parts/footer.ejs')%>
