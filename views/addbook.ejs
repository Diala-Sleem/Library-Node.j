<%-include('parts/nav.ejs')%>

<div class="page-content header-text">
  <div class="container">
    <div class="row justify-content-md-center align-items-center">
      <div class="col col-lg-6">
        <div style="margin-top: 140px; padding: 20px">
          <div class="col-md-12">
            <div class="contact-form">
              <div class="row">
                <form
                  method="POST"
                  action="/addbook"
                  enctype="multipart/form-data"
                >
                  <%if(Successmessage){%>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <p class="alert alert-warning"><%=Successmessage%></p>
                  </div>
                  <%}%>

                      <%if(Erorrmessage){%>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <p class="alert alert-warning"><%=Erorrmessage%></p>
                  </div>
                  <%}%>

                 
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <input
                      name="title"
                      type="text"
                      class="form-control"
                      id="title"
                      placeholder="Book Title"
                      required
                    />
                  </div>

                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <input
                      name="description"
                      type="textarea"
                      class="form-control"
                      id="description"
                      placeholder="Description"
                      required
                    />
                  </div>

                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <input
                      name="author"
                      type="text"
                      class="form-control"
                      id="author"
                      placeholder="Author"
                      required
                    />
                  </div>

                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <input
                      name="price"
                      type="number"
                      class="form-control"
                      id="price"
                      placeholder="Price"
                      required
                    />
                  </div>

                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <input
                      name="image"
                      type="file"
                      class="form-control"
                      id="image"
                      accept=".jpg,.jpeg,.png,.svg"
                      required
                    />
                  </div>

                  <div class="col-lg-12">
                    <button
                      type="submit"
                      id="form-submit"
                      class="filled-button"
                    >
                      Add
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%-include('parts/footer.ejs')%>
